
{% extends 'HTMMagasinierBundle::magasinier.html.twig' %}

{% block body %}

    <div class=" grid simple">
       <div id="salepoint-result" class="grid-body row">
            <table class="table table-bordered no-more-tablesr" id="dataTables-example">
                <thead>
                <tr>
                    <th>Pv destination</th>
                    <th>nom produit</th>

                    <th>Quantit√©</th>
                    {#<th>Pv destination</th>#}
                    <th>statut</th>
                </tr>
                </thead>
                <tbody>
                {% for entry in entities %}
                    <tr>
                        <td>{% if entry.user.magasinier.PointDeVente.nomPv is defined%} {{  entry.user.magasinier.PointDeVente.nomPv }} {% else %} Admin{% endif %}</td>
                        <td>{{ entry.produit.nom}}</td>

                        <td>{{ entry.quantite}}</td>
                        {#<td>{% if entry.user.magasinier.PointDeVente.nomPv is defined%} {{ entry.user.magasinier.PointDeVente.nomPv }}{% endif %}</td>#}
                        <td>
                            {% if  entry.statut ==0%}
                                En attente
                            {% elseif entry.statut ==1%}
                                Accepter
                            {% elseif entry.statut ==2 %}
                                Refuser
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr> <span > Le point de vente n'a pas des sorties pour le moment </span> </tr>

                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
{% endblock %}



	
 
