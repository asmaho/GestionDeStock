{% extends 'HTMMagasinierBundle::magasinier.html.twig' %}

{% block body %}
    <div class="row-fluid">
        <div class="span12">
            <div class="grid simple ">
                <div class="grid-title">
                    <span class="semi-bold">Liste des produit selon catégorie</span>
                    <div class="tools"><a href="javascript:;" class="collapse"></a>
                        <a href="{{ path('htm_magasinier_produitenstock') }}" class="reload"></a> <a href="javascript:;"
                                                                                                     class="remove"></a>
                    </div>
                </div>

                <div class="grid-body ">

                    {% for categorie in categories %}


                        <a href="{{ path('htm_magasinier_produitenstock',{'categorie':categorie.id}) }}" id="_submit"
                           name="_submit" class="btn btn-primary btn-cons pull-left"> {{ categorie.nom }} </a>

                    {% endfor %}
                    <br><br><br>
                    <table class="table table-striped" id="example2">
                        <thead>
                        <tr>
                            <th></th>

                            <th>photo</th>
                            <th>Code à barre</th>
                            <th>Nom</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th>Quantité min</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if produits is defined %}
                            {% for point in produits %}


                                <tr class="odd gradeX">
                                <td><i class="fa fa-plus-circle"></i></td>
                                {% if point.quantite <= point.produit.quantiteMin %}
                                    <td><img src="{{asset('assets/img/image/'~point.produit.path)}}"  width= "70px" height="50px"/></td>
                                    <td style="background-color:red">{{ point.produit.barCode }}</td>
                                    <td style="background-color:red">{{ point.produit.nom }}</td>
                                    <td style="background-color:red">{{ point.produit.price }}</td>
                                    <td style="background-color:red">{{ point.quantite }}</td>
                                    <td style="background-color:red">{{ point.produit.quantiteMin }}</td>
                                {% else %}
                                    <td><img src="{{asset('assets/img/image/'~point.produit.path)}}"  width= "70px" height="50px"/></td>
                                    <td>{{ point.produit.barCode }}</td>
                                    <td>{{ point.produit.nom }}</td>
                                    <td>{{ point.produit.price }}</td>
                                    <td>{{ point.quantite }}</td>
                                    <td>{{ point.produit.quantiteMin }}</td>

                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div align="right" class="navigation">
        {{ knp_pagination_render(produits) }}
    </div>
    <script>
        $("#test2").remove();

    </script>
{% endblock %}
