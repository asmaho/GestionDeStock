{% extends 'HTMFournisseurBundle::fournisseur.html.twig' %}

{% block body %}
    <div class="row-fluid">
        <div class="span12">
            <div class="grid simple ">
                <div class="grid-title">
                    <span class="semi-bold">Liste des demandes d'approvisionnement</span>
                    <div class="tools"><a href="javascript:;" class="collapse"></a>
                        <a href="{{ path('htm_fournisseur_produitfournisseur') }}" class="reload"></a> <a href="javascript:;"
                                                                                                     class="remove"></a>
                    </div>
                </div>

                <div class="grid-body ">

                    <table class="table table-striped" id="example2">
                        <thead>
                        <tr>
                            <th></th>



                            <th>Nom Produit</th>

                            <th>Quantité</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                       <tbody>
                        {% if produits is defined %}
                            {% for fournisseur in produits %}

                                <tr class="odd gradeX">
                                    <td><i class="fa fa-plus-circle"></i></td>

                                    <td>{{ fournisseur.produit.nom }}</td>

                                    <td>{{fournisseur.quantite }}</td>
                                   {# <td>
                                        {% if fournisseur.statut ==0%}
                                            <a href="{{ path('change-statut',{'id':entry.id,'statut':1}) }}">Accepté</a>
                                            <a href="{{ path('change-statut',{'id':entry.id,'statut':2}) }}">Refusé</a>
                                            <a href="">Modifier</a>
                                        {% endif %}
                                    </td>#}
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>


                    </table>
                </div>
            </div>
        </div>

    </div>
    <div align="right" class="navigation">
        {{ knp_pagination_render(produits) }}
    </div>
    <script>
        $("#test2").remove();

    </script>
{% endblock %}


 
