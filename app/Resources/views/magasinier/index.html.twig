{% extends 'HTMStockBundle::index.html.twig' %}

{% block body %}
    <div class="row-fluid">
        <div class="span12">
            <div class="grid simple ">
                <div class="grid-title">
                    <span class="semi-bold">Liste des magasiniers</span>
                    <div class="tools"> <a href="javascript:;" class="collapse"></a>
                        <a href="#grid-config" data-toggle="modal" class="config"></a>
                        <a href="{{ path('magasinier_index') }}" class="reload"></a> <a href="javascript:;" class="remove"></a>
                    </div>
                </div>
                <div class="grid-body ">
                    <table class="table table-striped" id="example2" >
                        <thead>
                        <tr>
                            <th> </th>
                            <th>CIN </th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Adresse</th>
                            <th>Téléphone</th>
                            <th>Sexe</th>
                            <th>Point vente</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for magasinier in magasiniers %}

                            <tr class="odd gradeX">
                                <td><i class="fa fa-plus-circle"></i></td>
                                <td>{{ magasinier.cIN }}</td>
                                <td>{{ magasinier.nom }}</td>
                                <td>{{ magasinier.prenom }}</td>
                                <td>{{ magasinier.adresse }}</td>
                                <td>{{ magasinier.telephone }}</td>
                                <td>{{ magasinier.sexe }}</td>
                                <td>
                                    {% for PointDeVente in magasinier.PointDeVente %}
                                        {{ PointDeVente.nomPV }}<br>
                                    {% endfor %}
                                </td>
                             {#   <td>{{ magasinier.PointDeVente.nomPv }}</td>#}
                                <td class="center">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">

                                        <a href="{{ path('magasinier_edit', { 'id': magasinier.id }) }}" class="btn btn-xs  btn-warning"><i class="fa fa-edit"></i></a>
                                        <a href="{{ path('magasinier_show', { 'id': magasinier.id }) }}" class="btn btn-xs   btn-primary "><i class="fa fa-share"></i></a>
                                        <a href="{{ path('magasinier_delete', { 'id': magasinier.id }) }}" class="btn btn-xs  btn-danger" ><i class="fa fa-times fa fa-white"></i></a>
                                    </div> </td>

                            </tr>
                        {% endfor  %}
                        </tbody>
                    </table>
                
                     <div  align ="right" class="navigation">
                     {{ knp_pagination_render(magasiniers) }}
                     </div>
                     </div>
            </div>
        </div>

    </div>
  
    <script>
        $("#test2").remove();

    </script>

{% endblock %}
