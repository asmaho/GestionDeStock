{% extends 'HTMStockBundle::index.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <form action="{{ path('fournisseur_new') }}" method="post" {{ form_start(form ) }}>
                <div class="grid simple">
                    <div class="grid-title no-border">

                        <h4>Ajouter <span class="semi-bold">un Fournisseur</span></h4>
                    <a href="{{ path('fournisseur_index') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-primary my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-reply-all">  Retourner à la liste</i></a>
                    <div class="tools"> <a href="javascript:;" class="collapse"></a>  </div>
                </div>
                    {{ form_errors(form ) }}
                <div class="grid-body no-border"> <br>
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-xs-8"> 

                        <div class="form-group">
                                <label class="form-label"><span class="semi-bold">Nom</span></label>
                                <span class="help"></span>

                                <div class="controls">
                                    {{ form_widget(form.nom)}}


                                    </div>
                                </div>
                                <div class="form-group">
                                <label class="form-label"><span class="semi-bold">Prenom</span></label>
                                <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.prenom)}}

                                    </div>
                                </div>


                      <div class="form-group">
                                <label class="form-label"><span class="semi-bold">Login</span></label>
                                <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.user.username  ) }}


                                    </div>
                                </div>

                        <div class="form-group">
                            <label class="form-label"><span class="semi-bold">Mot de passe</span></label>
                            <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.user.plainPassword   ) }}

                            </div>
                        </div>
                            <div class="form-group">
                                <label class="form-label"><span class="semi-bold">Email</span></label>
                                <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.user.email) }}


                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label"><span class="semi-bold">Activé ?</span></label>
                                <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.user.enabled) }}

                                </div>
                            </div>

                        <div class="form-group">
                            <label class="form-label"><span class="semi-bold">Nom De La sociéte</span></label>
                            <div class="controls">
                                {{ form_widget(form.nomSociete)}}

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label"><span class="semi-bold">Adresse</span></label>
                       <div class="controls">
                                {{ form_widget(form.adresse)}}

                            </div>
                        </div>

                       <div class="form-group">
                                    <label class="form-label"><span class="semi-bold">Téléphone</span></label>

                                    {{ form_widget(form.tel)}}


                                        </div>

                        <div class="form-group">
                            <label class="form-label"><span class="semi-bold">Sexe</span></label>
                            <div class="controls">
                                {{ form_widget(form.sexe)}}

                            </div>
                            </div>


     <div class="pull-right">
<button type="submit" class="btn btn-primary btn-cons"><i class="icon-ok"></i> Save</button>
                <button type="button" class="btn btn-white btn-cons">Cancel</button>
            </div>

             </div>
</div>
    </div>
     </div>
 {{ form_rest(form) }}
    </form>
 </div>
     </div>

 {% endblock  %}